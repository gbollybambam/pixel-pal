{
  "name": "pixel-pal",
  "displayName": "Pixel Pal",
  "description": "A gamified AI coding companion that reacts to your GitHub Copilot CLI usage, git pushes, and coding speed.",
  "version": "1.0.0",
  "publisher": "PixelPal",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "icon": "icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pixel-pal-sidebar",
          "title": "Pixel Pal",
          "icon": "icon.png"
        }
      ]
    },
    "views": {
      "pixel-pal-sidebar": [
        {
          "type": "webview",
          "id": "pixel-pal.view",
          "name": "Pixel Pal",
          "visibility": "visible"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "esbuild": "^0.19.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3"
  }
}